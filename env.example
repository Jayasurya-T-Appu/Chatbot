# ChatBot SaaS Configuration
# Copy this file to .env and modify the values as needed

# Server Configuration
HOST=localhost
PORT=8000
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Admin Configuration
ADMIN_API_KEY=your-secure-admin-key-here

# Database Configuration
DATABASE_PATH=./data/chatbot_saas.db
CHROMA_DB_PATH=./chroma
DATA_DIR=./data

# File Storage Configuration
TEMP_DIR=./tmp
STATIC_DIR=./static

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5500,http://127.0.0.1:5500

# Client Management Configuration
DEFAULT_PLAN_TYPE=FREE
DEFAULT_CLIENT_STATUS=ACTIVE

# RAG Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Security Configuration
CLIENT_ID_PREFIX=client_
API_KEY_PREFIX=sk_

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
OLLAMA_TIMEOUT=30
OLLAMA_MAX_TOKENS=2048
OLLAMA_TEMPERATURE=0.7
